<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_activity_detection_button"
        android:layout_width="293dp"
        android:layout_height="98dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="283dp"
        android:text="Detecter les capteurs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_message_label" />

    <TextView
        android:id="@+id/main_activity_message_label"
        android:layout_width="306dp"
        android:layout_height="82dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="51dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Detectez les capteurs disponibles sur cet appareil."
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_detection_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>