<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/title_label"
            android:layout_width="377dp"
            android:layout_height="90dp"
            android:layout_marginStart="7sp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7sp"
            android:layout_marginBottom="25sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Listes des fonctionalites non disponibles"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:background="@color/teal_700"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_header_name"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fonctionalites" />

            <TextView
                android:id="@+id/list_header_type"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capteurs absents" />

            <TextView
                android:id="@+id/list_header_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disponibilite" />
        </LinearLayout>

        <ListView
            android:id="@+id/sensor_list_view"
            android:layout_width="wrap_content"
            android:layout_height="499dp"
            android:layout_margin="7sp"
            android:layout_marginStart="7sp"
            android:layout_marginLeft="7sp"
            android:layout_marginTop="7sp"
            android:layout_marginEnd="7sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>