   public static void removeAllSubComponents(Container container) {
        // Get all subcomponents
        Component[] components = container.getComponents();

        // Remove each component from the container
        for (Component component : components) {
            if(component instanceof OfferRoomCard)
            {
                container.remove(component);
            }
        }
        container.revalidate();
        container.repaint();
    }

